<div class="container-fluid">
    <div class="row m-auto text-start border pt-3 pb-5 mt-5", style="width: 350px">
      <div class="col">
        <h2>プロフィール編集</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!--アカウント編集時に名前を入力できるようにフォームを追加-->
        <div class="field mt-3">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, class: "textbox mt-2" %>
        </div>

        <div class="field mt-2">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "textbox mt-2" %>
        </div>

        <div class="field mt-2">
          <%= f.label :プロフィール写真 %><br/>
          <%= f.file_field :image, class: "mt-2" %>
        </div>


        <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->

        <div class="field  mt-2">
          <%= f.label :紹介文, "プロフィール" %><br/>
          <%= f.text_area :profile, autofocus: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field  mt-2">
          <%= f.label :パスワード %><br>
          <%= f.password_field :password, autocomplete: "new-password", class: "textbox mt-2", placeholder: "6文字以上" %><br>
          <i class="small text-muted">(パスワード変更しない場合は入力しないで大丈夫です) </i>
          <%
=begin%>
 <% if @minimum_password_length %>
            <br />
            <em class="small form-text text-muted"><%= @minimum_password_length %></em>
          <% end %>
<%
=end%>
        </div>

        <div class="field  mt-2">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "textbox mt-2", placeholder: "6文字以上" %>
        </div>

        <div class="field  mt-2">
          <%= f.label :現在のパスワード %><br>
          <i class="small text-muted">(パスワードを変更する場合は現在のパスワードを入力する必要があります)</i><br/>
          <%= f.password_field :password, autocomplete: "current-password", class: "textbox mt-2" %>
        </div>

        <div class="actions  mt-4">
          <%= f.submit "プロフィール変更", class: "btn btn-primary w-100" %>
        </div>

      <% end %>
      <div class="btn-center  mt-1">
        <p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100" %></p>
        <div class="btn btn-light w-100">
          <btn type="btn" onclick="history.back() ">戻る</btn>
        </div>
      <div>
    </div>
</div>
