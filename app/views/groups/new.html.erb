<div class="container">
  <div class="row text-center mt-5 mb-5">
    <h1><i class="bi bi-person-add me-1"></i>新規作成</h1>
  </div><hr>

  <%= form_with(model: @group, local: true) do |f| %>
    <div class="group-new-form mt-5">
      <div class="gtoup-new-form-name">
        <%= f.label :name, 'グループ名' %>
        <%= f.text_field :name, class: 'form-control mt-2' %>
        <%= f.label :goal, 'グループ目標' %>
        <%= f.text_field :goal, class: 'form-control mt-2' %>
        <%= f.collection_check_boxes :user_ids, User.all, :id, :name %>
      </div>
      <%= f.submit '新規作成', class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>
