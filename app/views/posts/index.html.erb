<main id="index-detail">
  <div class="row text-center">
    <div class="row text-center">
      <div clss="col">
        <h1 class="m-5"><i class="bi bi-pencil-square r me-1"></i>投稿一覧</h1><hr>
      </div>
    </div>
    <div class="row text-center">
      <% @posts.each do |post| %>
        <div clss="col">
          <a class="m-3"><img src=<%= @user.image %> width="100" height="100" class="rounded-circle"></a>
          <a><%= post.user.name %></a>
        </div>
        <div clss="col">
          <p  class="mt-3 mb-5">目標: <%= link_to post.title, "/posts/#{post.id}" %></p>
        </div>
      <% end %>
    </div>
  </div>
</main>
