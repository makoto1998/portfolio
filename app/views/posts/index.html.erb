<main id="index-detail">
  <div class="container text-center">
    <div class="row text-center">
      <div clss="col">
        <h1 class="m-5"><i class="bi bi-pencil-square r me-1"></i>投稿一覧</h1><hr>
      </div>
    </div>
    <div class="row text-center">
      <% @posts.each do |post| %>
        <div class="col">
          <% if post.user.image? %>
            <a><img src=<%= post.user.image %> width="80" height="80" class="rounded-circle"></a>
          <% else %>
            <a><%= image_tag ("/images/default_image.PNG"), class: "rounded-circle", width: '80px', height: '80px'  %>
          <% end %></a>
            <a><%= post.user.name %></a>
        </div>
        <div clss="col">
          <p  class="mt-3 mb-5">目標: <%= link_to post.title, "/posts/#{post.id}" %></p>
        </div>
      <% end %>
    </div>
  </div>
</main>
