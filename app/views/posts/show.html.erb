<main id="post-detail">
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <div class="btn-group">
          <div class="text-end">
            <p class="text-end border rounded ms-5 mt-3 p-2"><%= link_to"編集", "/posts/#{@post.id}/edit", class: "nav-link p-0" %></p>
          </div>
          <div class="text-end">
            <p class="text-end border rounded mt-3 p-2"><%= link_to "削除", "/posts/#{@post.id}/destroy", method: :"post", class: "nav-link" %></p>
          </div>
        </div>
      <% end %>

  <div class="row text-center">
    <div class="col m-5">
      <p class="h1"><i class="bi bi-pencil-square me-1"></i><%= @user.name %>の投稿</p><hr>
      <h2 class="title mt-5 mb-3">タイトル</h2>
      <p class="h3 text-dark"><%= @post.title %></p>
    </div>
    </div>
    <div class="row text-center">
      <div class="col">
        <h2 class="title">本文</h2>
        <p><%= @post.body %></p>
      </div>
    </div>
    <div class="row text-center">
      <div class="col m-5">
        <p class=""><button type="button" onclick="history.back()">戻る</button></p><hr>
      </div>
    </div>
  </div>


  <% unless current_user.nil? %>
    <div class="container">
      <div class="btn mt-5 p-0 ">
        <p class="h3 mb-3 text-start"><i class="bi bi-record me-1"></i>行動設定</p>
        <p class="h5 mb-5"><%= link_to 'カレンダーに行動追加', new_event_path %></p>
        <p class="h3 mt-3 text-start"><i class="bi bi-flag me-1"></i>目標一覧</p>
      </div>
      <div class="row mt-2 mb-5">
        <% @posts.each do |post| %>
            <p class="h5 me-3"><%= link_to post.title, "/posts/#{post.id}" %></p>
        <% end %>
      </div>
      <div class="row">
        <%= month_calendar events: @events do |date, events| %>
          <%= date.day %>

          <% events.each do |event| %>
            <div>
              <%= event.title %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</main>
