<div class="container">
  <div class="dropdown mt-5">
      <button class="btn border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        編集
      </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="/users/edit">プロフィール編集</a></li>
      <li><a class="dropdown-item" href="/posts/new">目標を登録<a></li>
    </ul>
  </div>

  <h1 class="text-center m-5"><i class="bi bi-person me-1"></i>マイページ</h1>

  <div class="row">
    <div class="col-md-2">
      <img src=<%= @user.image %> width="100" height="100">
    </div>
    <div class="col-md-2">
      <h2 class="m-2"><%= current_user.name %></h2>
    </div>
  </div>

  <ul class="nav nav-tabs mt-4">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">投稿</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Link</a>
    </li>
  </ul>

  <div class="row">
    <div class="col m-5">
      <h1 class="text-center m-3"><i class="bi bi-pencil-square me-1"></i>投稿一覧</h1>
      <% @posts.each do |post| %>
        <div class="detail">
          <div class="col">
            <h2 class="mt-4"><%= link_to post.title, "/posts/#{post.id}" %></h2>
            <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

